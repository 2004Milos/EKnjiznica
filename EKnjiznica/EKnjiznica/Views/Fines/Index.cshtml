@model IEnumerable<EKnjiznica.Models.Fine>

@{
    ViewData["Title"] = "Fines Management";
}

<h2>Fines Management</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Issue New Fine</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Member</th>
            <th>Amount</th>
            <th>Reason</th>
            <th>Issue Date</th>
            <th>Status</th>
            <th>Paid Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var fine in Model)
            {
                <tr>
                    <td>@fine.User?.Email</td>
                    <td>@fine.Amount.ToString("F2") EUR</td>
                    <td>@fine.Reason</td>
                    <td>@fine.IssueDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <span class="badge @(fine.IsPaid ? "bg-success" : "bg-danger")">
                            @(fine.IsPaid ? "Paid" : "Unpaid")
                        </span>
                    </td>
                    <td>@(fine.PaidDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>
                        @if (!fine.IsPaid)
                        {
                            <form asp-action="MarkAsPaid" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@fine.ID" />
                                <button type="submit" class="btn btn-sm btn-success">Mark as Paid</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No fines found.</td>
            </tr>
        }
    </tbody>
</table>

