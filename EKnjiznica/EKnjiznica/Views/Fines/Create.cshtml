@model EKnjiznica.Models.Fine

@{
    ViewData["Title"] = "Issue Fine";
    var members = ViewBag.Members as IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser> ?? new List<Microsoft.AspNetCore.Identity.IdentityUser>();
}

<h2>Issue New Fine</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="UserId" class="form-label">Member</label>
        <select asp-for="UserId" class="form-control" required>
            <option value="">-- Select Member --</option>
            @foreach (var member in members)
            {
                <option value="@member.Id">@member.Email</option>
            }
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label">Amount</label>
        <input asp-for="Amount" type="number" step="0.01" min="0" class="form-control" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Reason" class="form-label">Reason</label>
        <textarea asp-for="Reason" class="form-control" rows="3" required></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Issue Fine</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

