<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EKnjiznica</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EKnjiznica.styles.css" asp-append-version="true" />
</head>

<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EKnjiznica</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                    aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarMain">
                <ul class="navbar-nav flex-grow-1">

                    <!-- Always visible -->
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <!-- Books link - visible to all authenticated users -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Books" asp-action="Index">Books</a>
                        </li>
                    }

                    <!-- Librarian Menu -->
                        @if (User.IsInRole("Librarian"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button"
                                   data-bs-toggle="dropdown">Librarian</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Manage Books</a></li>
                                    <li><a class="dropdown-item" asp-controller="Loans" asp-action="Index">Manage Loans</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reservations" asp-action="Index">Manage Reservations</a></li>
                                    <li><a class="dropdown-item" asp-controller="Fines" asp-action="Index">Manage Fines</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Manage Members</a></li>
                                </ul>
                            </li>
                        }

                    <!-- Member Menu -->
                        @if (User.IsInRole("Member"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button"
                                   data-bs-toggle="dropdown">My Library</a>
                                <ul class="dropdown-menu">

                                    <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Browse Books</a></li>
                                    <li><a class="dropdown-item" asp-controller="Loans" asp-action="MyLoans">My Loans</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reservations" asp-action="MyReservations">My Reservations</a></li>
                                    <li><a class="dropdown-item" asp-controller="Fines" asp-action="MyFines">My Fines</a></li>

                                </ul>
                            </li>
                        }

                </ul>

                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
            @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - EKnjiznica -
        <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
