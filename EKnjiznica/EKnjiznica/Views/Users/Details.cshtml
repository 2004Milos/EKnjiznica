@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "User Details";
    var roles = ViewBag.Roles as IList<string> ?? new List<string>();
}

<h2>User Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Email Confirmed</dt>
        <dd class="col-sm-10">@(Model.EmailConfirmed ? "Yes" : "No")</dd>

        <dt class="col-sm-2">Roles</dt>
        <dd class="col-sm-10">
            @if (roles.Any())
            {
                @string.Join(", ", roles)
            }
            else
            {
                <span>No roles assigned</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

